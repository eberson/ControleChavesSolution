@{
    ViewData["Title"] = "Logout";
    var url = ViewBag.ReturnUrl;
}

<div class="row">
    <div class="col-md-12">
        <h3>Tem certeza que deseja encerrar a sessão atual?</h3>
        <form a method="post" asp-action="Logout">
            <button type="submit" class="btn btn-lg btn-danger">Sim</button>
            <a asp-action="Cancel" asp-route-returnUrl="@url" class="btn btn-lg btn-warning">Não</a>
        </form>
    </div>
</div>